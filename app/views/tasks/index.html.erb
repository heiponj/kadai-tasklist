<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <h1>タスク一覧</h1>
<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.id,task %>:<%= task.status %>&gt;<%= task.content %></li>
  <%  end %>
</ul>

<%= link_to "新規タスクの投稿", new_task_path %>
<%= link_to 'Logout', logout_path, method: :delete, class: 'nav-link' %>

<% else %>
  <div class="bg-secondary p-3 p-sm-5 my-4 rounded">
    <div class="text-center text-white">
      <h1>タスク管理アプリ</h1>
      <%= link_to '新規登録', signup_path %>
      <%= link_to "ログイン", "/login" %>
    </div>
  </div>
<% end %>
